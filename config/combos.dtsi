/*                KEY POSITIONS

  ╭─────────────────────╮ ╭─────────────────────╮
  │ LT4 LT3 LT2 LT1 LT0 │ │ RT0 RT1 RT2 RT3 RT4 │
  │ LM4 LM3 LM2 LM1 LM0 │ │ RM0 RM1 RM2 RM3 RM4 │
  │ LB4 LB3 LB2 LB1 LB0 │ │ RB0 RB1 RB2 RB3 RB4 │
  ╰───────╮ LH2 LH1 LH0 │ │ RH0 RH1 RH2 ╭───────╯
          ╰─────────────╯ ╰─────────────╯ */

#define COMBO_TERM 30
#define COMBO_IDLE 50

// make homerow combos tap-only (so HRMs can be chorded instantaneously)
#define HRC_TAB    &hml          LS(LCTRL)      TAB
#define HRC_BSPC   &hml          LS(LALT)       BSPC
#define HRC_ESC    &hml          LA(LS(LCTRL))  ESC
#define HRC_BSWD   &hml          LG(LS(LALT))   LC(BSPC)
#define DSK_PREV   &hml          LG(LSHIFT)     LG(LC(LEFT))
#define DSK_NEXT   &hml          LS(RALT)       LG(LC(RIGHT))

/* Horizontal combos - left hand */
/* ZMK_COMBO(esc,   &kp ESC,       LT3 LT2,     DEFAULT MOUSE, COMBO_TERM, COMBO_IDLE)*/
ZMK_COMBO(mouse, &smart_mouse,  LT3 LT1,     DEFAULT, COMBO_TERM, COMBO_IDLE)

ZMK_COMBO(bspcl, HRC_BSPC,      LM3 LM2,     DEFAULT MOUSE, COMBO_TERM, COMBO_IDLE)
ZMK_COMBO(bspwd, HRC_BSWD,      LM4 LM3 LM2, DEFAULT MOUSE, COMBO_TERM, COMBO_IDLE)
ZMK_COMBO(tab,   HRC_TAB,       LM2 LM1,     DEFAULT MOUSE, COMBO_TERM, COMBO_IDLE)
ZMK_COMBO(dprev, DSK_PREV,      LM4 LM2,     DEFAULT MOUSE, COMBO_TERM, COMBO_IDLE)
ZMK_COMBO(dnext, DSK_NEXT,      LM2 LM0,     DEFAULT MOUSE, COMBO_TERM, COMBO_IDLE)
ZMK_COMBO(esc,   HRC_ESC,       LM3 LM2 LM1, DEFAULT MOUSE, COMBO_TERM, COMBO_IDLE)


ZMK_COMBO(copy,  &copy_cut,      LB3 LB2,     DEFAULT MOUSE, COMBO_TERM, COMBO_IDLE)
ZMK_COMBO(paste, &kp LS(INS),    LB2 LB1,     DEFAULT MOUSE, COMBO_TERM, COMBO_IDLE)

/* Horizontal combos - right hand */
ZMK_COMBO(bslh,  &kp BSLH,      RT1 RT2,     DEFAULT, COMBO_TERM, COMBO_IDLE)

ZMK_COMBO(minus, &kp MINUS,     RM1 RM2,     DEFAULT, COMBO_TERM, COMBO_IDLE)
ZMK_COMBO(colon, &kp MINUS, RM2 RM3,     DEFAULT, COMBO_TERM, COMBO_IDLE)

ZMK_COMBO(under, &kp UNDER,      RB1 RB2,     DEFAULT, COMBO_TERM, COMBO_IDLE)
ZMK_COMBO(rbkt,  &kp &num_dance, RB2 RB3,     DEFAULT, COMBO_TERM, COMBO_IDLE)

ZMK_COMBO(unicd,   &sl UNICODE, RT1 RT3,     DEFAULT, COMBO_TERM, COMBO_IDLE)
ZMK_COMBO(cpunicd, &sls 0,      RT1 RT2 RT3, DEFAULT, COMBO_TERM, COMBO_IDLE)

